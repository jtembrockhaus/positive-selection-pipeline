// default arguments parameters
params {
    help = false
    cpus = Runtime.runtime.availableProcessors()
    gene_list = 'configs/genes_and_products.txt'
    gene_trim_intervals = 'data/static/padded_gene_intervals.json'
    gene_lengths = 'data/static/reference_gene_lengths.json'
}

// execution profiles
profiles {
    standard {
        executor {
            name = "local"
            cpus = params.cpus
        }
        includeConfig 'configs/profiles/local.config'
    }

    hpi-hpc {
        executor {
            name = "slurm"
            cpus = params.cpus
        }
        includeConfig 'configs/profiles/hpi-hpc.config'
    }
}